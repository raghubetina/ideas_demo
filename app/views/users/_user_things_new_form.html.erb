<%= form_with(model: @thing, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: "form-control" %>
  </div>

  <%= f.hidden_field :user_id, value: @user.id %>

  <%= f.submit "Create thing", class: "btn btn-block btn-outline-secondary" %>
<% end %>
